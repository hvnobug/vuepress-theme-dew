h1, h2, h3, h4, h5, h6
  &::hover {
    cursor: pointer;
    color: $accentColor;
  }

  &:hover:before {
    width: 100%;
  }

  &::after {
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    height: 1px;
    background-color: $borderColor;
    left: 0;
    bottom: -1px;
  }

  &::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    display: block;
    width: 30px;
    height: 3px;
    background: -webkit-gradient(linear, left top, left bottom, color-stop(30%, darken($accentColor, 10%)), color-stop(70%, lighten($accentColor, 10%)));
    background: linear-gradient(darken($accentColor, 10%) 30%, lighten($accentColor, 10%) 70%);
    box-shadow: 0 3px 3px rgba($accentColor, 0.4);
    border-radius: 4px;
    -webkit-transition: 2s;
    transition: 2s;
    z-index: 1;
  }


::-webkit-scrollbar
  width 5px
  height 5px


::-webkit-scrollbar-thumb
  border-radius 15px;
  background linear-gradient(lighten($accentColor, 15%) 20%, lighten($accentColor, 10%) 80%);
  box-shadow inset 2px 2px 2px hsla(0, 0%, 100%, .45), inset -2px -2px 2px lighten($accentColor, 15%);


::-moz-selection
  background $accentColor


::selection
  background $accentColor


.vuepress-plugin-comment, #vuepress-plugin-comment
  max-width $contentWidth
