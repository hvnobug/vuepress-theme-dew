.go-to-top {
  width 32px;
  height 32px;
  padding 5px;
  box-shadow: 0 5px 25px 0 rgba(0, 0, 0, .2), 0 10px 30px -11px rgba(0, 0, 0, .6);
  border-radius 50%;
}

.custom-block
  &.block
    text-shadow: 0 -1px darken($accentColor, 10%);
    box-shadow: 0 3px 12px lighten($accentColor, 10%);
    background: -webkit-gradient(linear, left top, right top, from(darken($accentColor, 10%)), to(lighten($accentColor, 10%)));
    background: linear-gradient(90deg, darken($accentColor, 10%), lighten($accentColor, 10%));
    padding: 1rem;
    color: #eee;
    font-weight: bold;
    border-radius: 10px;
    position relative;

    {$contentClass} > &
      code
        background none
        color #e0e0e0 !important;
        text-shadow 0 0 2px #100c0f, 0 0 5px #dc078e33, 0 0 10px #fff3;

    &::before
      font-size: 1.2rem;
      text-shadow: 0 -1px #3c67bd;
      background: -webkit-gradient(linear, left bottom, left top, from(darken($accentColor, 10%)), to(lighten($accentColor, 10%)));
      background: linear-gradient(0deg, darken($accentColor, 10%), lighten($accentColor, 10%));
      content: 'i';
      position: absolute;
      width: 24px;
      height: 24px;
      line-height: 24px;
      top: -12px;
      left: -12px;
      text-align: center;
      font-weight: 900;
      border-radius: 50%;
      box-shadow: 0 0 0 2.5px #eee;
      color: #eee;

